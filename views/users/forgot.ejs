<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center mt-5 mb-5 py-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1522661067900-ab829854a57f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title text-center">Forgot Password</h5>
                        <form action="/forgot" method="POST" class="validated-form" novalidate>
                            <div class="form-group mb-3">
                                <label for="email" class="p-2">Email</label>
                                <input type="email" name="email" autofocus class="form-control">

                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-primary col-12" value="Reset Password">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
