<% layout('/layouts/boilerplate') %>

    <div class="container contact-con">
        <div class="form contact-form ">
            <div class="contact-info">
                <h3 class="title">Let's get in touch</h3>
                <p class="text"> Contact us with the following details. and fillup the form with the details. </p>
                <div class="info">
                    <div class="social-information"> <i class="fa fa-map-marker"></i>
                        <p>NIIT University, Neemrana, Rajasthan, India</p>
                    </div>
                    <div class="social-information"> <i class="fa fa-envelope-o"></i>
                        <p>donation.nation.21@gmail.com</p>
                    </div>
                    <div class="social-information"> <i class="fa fa-mobile-phone"></i>
                        <p>+91-9837283202 </p>
                    </div>
                </div>
                <div class="social-media">
                    <p>Connect with us :</p>
                    <div class="social-icons"> <a href="#"> <i class="fa fa-facebook-f"></i> </a> <a href="#"> <i
                                class="fa fa-twitter"></i> </a> <a href="#"> <i class="fa fa-instagram"></i> </a> <a
                            href="#"> <i class="fa fa-linkedin"></i> </a> </div>
                </div>
            </div>
            <div class="contact-info-form"> <span class="circle one"></span> <span class="circle two"></span>
                <form action="/send_email"  autocomplete="off" method="POST" class="frm">
                    <h3 class="title">Contact us</h3>
                    <div class="social-input-containers"> <input type="text" name="name" class="input"
                            placeholder="Name" /> </div>
                    <div class="social-input-containers"> <input type="email" name="email_contact" class="input"
                            placeholder="Email" /> </div>
                    <div class="social-input-containers"> <input type="tel" name="phone" class="input"
                            placeholder="Phone" /> </div>
                    <div class="social-input-containers textarea"> <textarea name="message" class="input"
                            placeholder="Message"></textarea> </div> 
                    <button type="submit"  value="Send" class="btn contact-btn"> Submit</button>
                </form>
            </div>
        </div>
    </div>
