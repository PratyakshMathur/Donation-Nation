                <div class="mb-3">
                    <div class="form-file custom-file">
                        <label for="image" class="form-label ">Add Images</label>
                        <input class="form-control form-file-input" type="file" id="image" name="image" multiple required>
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Create Donation</button>
                    <button class="btn btn-success"><a href="/donate" class="text-light">Back to All
                            Donations</a></button>

                </div>
            </form>

        </div>
    </div>
